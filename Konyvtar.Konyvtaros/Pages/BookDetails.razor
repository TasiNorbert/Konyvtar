@page "/books/{BookID}"

@if (Book == null)
{
    <LoadingAnimation />
}
else
{
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Title</label>
        <div class="col-sm-8">
            <label type="text" class="form-control-plaintext">@Book.Title</label>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Author</label>
        <div class="col-sm-8">
            <label type="text" readonly class="form-control-plaintext">@Book.Author</label>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Rental Status</label>
        <div class="col-sm-8">
            @if (Book.IsBorrowed)
            {
                <label type="text" readonly class="form-control-plaintext">Borrowed</label>
            }
            else
            {
                <label type="text" readonly class="form-control-plaintext">Available</label>
            }
        </div>
    </div>

    @if (Book.IsBorrowed)
    {
        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Name of Borrower</label>
            <div class="col-sm-8">
                <label type="text" readonly class="form-control-plaintext">@Book.NameOfBorrower</label>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Date of Borrowing</label>
            <div class="col-sm-8">
                <label type="text" readonly class="form-control-plaintext">@Book.DateOfBorrowing.ToShortDateString()</label>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-4 col-form-label">Date of Return</label>
            <div class="col-sm-8">
                <label type="text" readonly class="form-control-plaintext">@Book.DateOfReturn.ToShortDateString()</label>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-warning" @onclick="@DeleteBook">Delete</button>
}
